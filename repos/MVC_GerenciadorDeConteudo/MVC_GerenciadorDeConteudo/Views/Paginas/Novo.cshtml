@{
    ViewBag.Title = "Paginas";
    List<Business.Pagina> paginas = ViewBag.Paginas; //os dados são armazenados na var paginas
}

<div class="jumbotron">
    <h1>Nova Pagina</h1>
    <div>
        <a href="/paginas" class="btn btn-default">Voltar</a>
    </div>


    <form action="/paginas/criar" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" name="nome">
        </div>
        <div class="form-group">
            <label for="conteudo">Conteudo:</label>
            <textarea class="form-control" id="conteudo" name="conteudo"></textarea>
        </div>
        <div class="form-group">
            <label for="data">Data:</label>
            <input type="datetime" class="form-control" id="data" name="time">
        </div>


        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

</div>